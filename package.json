{
  "name": "automacao-mtr-electron",
  "version": "2.2.1",
  "description": "Automação de Manifesto de Transporte de Resíduos (MTR INEA) com interface Electron.",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Clebson de Oliveira Correia",
  "license": "ISC",
  "dependencies": {
    "electron-log": "^5.1.5",
    "electron-updater": "^6.1.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.clebsonoc.automacaomtr",
    "productName": "Automação MTR INEA",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,*.log}",
      "!**/{.jscsrc,.jshintrc,.npmignore,.npmrc,.prettierrc,yarn.lock}"
    ],
    "asarUnpack": [
      "**/vendor/**"
    ],
    "win": {
      "icon": "public/logo_inea.jpg",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "ClebsonOC",
      "repo": "mtr-automacao"
    }
  }
}